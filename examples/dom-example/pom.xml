<?xml version="1.0"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.tlsys</groupId>
    <artifactId>twt-dom-example</artifactId>
    <version>1.0</version>
    <packaging>war</packaging>
    <name>TWT Dom Example</name>
    <url>http://maven.apache.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.tlsys</groupId>
            <artifactId>twt-rt</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.tlsys</groupId>
            <artifactId>twt-dom</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>dom-example</finalName>
        <plugins>
            <plugin>
                <groupId>org.tlsys</groupId>
                <artifactId>twt</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>gen2</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <generator>org.tlsys.twt.Generator</generator>
                    <targets>
                        <target>
                            <out>main.js</out>
                            <classes>
                                <class>
                                    <main>org.tlsys.Main</main>
                                    <methods>
                                        <method>main</method>
                                    </methods>
                                </class>
                            </classes>
                        </target>
                    </targets>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
